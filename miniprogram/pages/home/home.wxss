/* pages/home/home.wxss */

/* Search */
.search {
  float: left;
  position: relative;
  top: -40rpx;
  width: 100%;
  height: 80rpx;
}

.search_input {
  box-sizing: border-box;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  color: #888888;
  background: #ffffff;
  margin: 0 auto;
  padding: 0 37.5rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #eeeeee; 
}

/* Icon 240rpx */
.icon {
  width: 100%;
  height: 240rpx;
  /* background: blue; */
}

.icon_item {
  float: left;
  width: 187.5rpx;
  height: 140rpx;
  /* background: red; */
  text-align: center;
}

.icon_item_logo {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgb(40, 160, 40);
  box-shadow: 0rpx 0rpx 10rpx 5rpx #eeeeee;
  border-radius: 50%;
  margin: 0 auto;
  font-size: 50rpx;
  color: #ffffff;
}

.icon_item_text {
  font-size: 30rpx;
  color: #555555;
}

/* Like 300rpx*/
.like {
  width: 90%;
  height: 300rpx;
  /* background: red; */
  margin: 0 5% 15rpx 5%;
}

.like_title {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.like_wrap {
  width: 100%;
  height: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.like_wrap_item {
  display: inline-block;
  width: 250rpx;
  height: 230rpx;
  margin-right: 10rpx;
  background: orange;
  border-radius: 20rpx;
}

/* Model */
.model {
  width: 90%;
  height: 300rpx;
  background: blue;
  margin: 0 5% 15rpx 5%;
}