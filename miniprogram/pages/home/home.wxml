<!--pages/home/home.wxml-->
<!-- Banner -->
<swiper
  class="banner"
  autoplay="true"
  interval="5000"
  circular="true"
>
  <block 
    wx:for="{{listBannerTitle}}"
    wx:key="*this"
  >
    <swiper-item
      class="banner_item"
    >
      <view class="banner_item_title">
        {{item}}
      </view>
    </swiper-item>
  </block>
</swiper>

<!-- Search -->
<view class="search">
  <view class="search_input">
    <i class="iconfont icon_search"></i>
    请输入小区名、楼盘、商圈
  </view>
</view>

<!-- Icon -->
<view class="icon">
  <view
    wx:for="{{listIconData}}"
    wx:key="*this"
    class="icon_item"
  >
    <view class="icon_item_logo iconfont {{item.logo}}"></view>
    <text class="icon_item_text">{{item.title}}</text>
  </view>
</view>

<!-- Like -->
<view class="like">
  <view class="like_title">主推产品</view>
  <scroll-view
    class="like_wrap"
    scroll-x="true"
  >
    <view
      wx:for="{{listLikeData}}"
      wx:key="*this"
      class="like_wrap_item"
    >
      <view>{{item.title}}</view>
      <view>{{item.desc}}</view>
    </view>
  </scroll-view>
</view>

<!-- Model -->
<view class="model">
  <text>主营商圈</text>
</view>