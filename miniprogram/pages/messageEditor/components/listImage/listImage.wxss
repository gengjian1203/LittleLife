/* pages/messageEditor/listImage/listImage.wxss */
.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
  padding: 0 30rpx;
}

.wrap .item {
  overflow: hidden;
  position: relative;
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.wrap .item .item-image {
  width: 100%;
  height: 100%;
}

.wrap .item .item-delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #eee;
  background-color: rgba(160, 160, 160, 0.6);
}

.wrap .item-add {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 100rpx;
  color: #999999;
  line-height: 220rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
}
